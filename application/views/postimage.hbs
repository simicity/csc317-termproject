<div class="post-container">
    <h1>Post Images</h1>
    <form method="POST" enctype="multipart/form-data" action='/posts/createpost'>
        <div class="mb-3">
            <label for="title"><small>Title</small></label>
            <input type="text" class="form-control form-control-sm" name="title" required/>
        </div>
        <div class="mb-3">
            <label for="description"><small>Description</small></label>
            <textarea class="form-control form-control-sm" id="description" row="5" name="description" required></textarea>
        </div>
        <div class="mb-3">
            <label for="uploadImage"><small>Images</small></label>
            <br>
            <input type="file" class="form-control-file" name="uploadImage" accept="image/*" required/>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" name="confirm-policy" required/>
            <label class="form-check-label" for="confirm-policy">I accept <a href="#">Acceptable Use Policy</a>.</label>
        </div>
        <br>
        <button type="submit" id="submit-post" class="btn btn-submit">Post</button>
    </form>
</div>